<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".aksemseddin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/imageView121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/aksemseddin" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AKŞEMSEDDİN TÜRBESİ"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Bolu'un en çok ziyaret edilen tarihi mekanlarından biri de Fatih Sultan Mehmet'in akıl hocası olan ve 1459 yılında vefat eden Akşemseddin’in türbesi. Göynük ilçesi merkezinde Cuma Mahallesi’ndeki Gazi Süleyman Paşa Camii'nin avlusunda yer alan Akşemseddin Türbesi, özellikle bayramlar ve kutsal günlerde tamamen doluyor. 1464 yılında Fatih Sultan Mehmet'in emriyle yaptırılan ve klasik Osmanlı mimarisinin en güzel örneklerinden biri olan, altıgen planlı ve kesme taşından inşa edilmiş türbenin ceviz ağacından yapılan ve ahşap işçiliği dikkat çeken sandukası da görülmeye değer güzellikte. Göynük ilçesi gezerken hem tarihi Gazi Süleyman Paşa Camii'ni hem de Akşemseddin Türbesi’ni birlikte ziyaret edebilirsiniz."
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/aksemseddin2" />

            <ImageView
                android:id="@+id/imageView123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/aksemseddin1" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>

