<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".temenni">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView214"
                android:layout_width="match_parent"
                android:layout_height="351dp"
                app:srcCompat="@drawable/temenni" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEMENNİ TEPESİ"
                android:textAlignment="center"
                android:textColor="#FFAB00"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="413dp"
                android:layout_marginTop="15dp"
                android:text="Büyüleyici peribacaları, tarihi kiliseler ve kayaların içine oyulmuş evleri ile ünlü Ürgüp’ün inanılmaz manzaralarını kuş bakışı izlemek için Temenni Tepesi’ne kesinlikle uğramalısınız. Nevşehir gezilerinin değişmez adreslerinden olan ve Erciyes Dağı'na kadar uzanan etkileyici bir Kapadokya manzarası sunan tepede Kılıçarslan Gazi Türbesi’ni de ziyaret edebilirsiniz.  Nazar boncuklarıyla süslü dilek ağaçlarının sardığı ve Ürgüp merkezinden 80 metre yükseklikte yer alan Temenni Tepesi’nin zirvesine kayalar içine oyulmuş ve uzunluğu 100 metreyi bulan kanallardan geçerek ulaşılıyor. Günün her saati yerli ve yabancı turistlerle çok hareketli olan tepeye kış aylarında uğrarsanız, Ürgüp’ün kar altındaki çarpıcı manzaralarının da fotoğraflarını çekebilirsiniz."
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView215"
                android:layout_width="match_parent"
                android:layout_height="396dp"
                app:srcCompat="@drawable/temenni1" />

            <ImageView
                android:id="@+id/imageView217"
                android:layout_width="match_parent"
                android:layout_height="302dp"
                app:srcCompat="@drawable/temenni3" />

            <ImageView
                android:id="@+id/imageView218"
                android:layout_width="match_parent"
                android:layout_height="343dp"
                app:srcCompat="@drawable/temenni2" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>