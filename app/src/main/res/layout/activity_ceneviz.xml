<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ceneviz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView233"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                app:srcCompat="@drawable/ceneviz" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CENEVİZ KALESİ"
                android:textAlignment="center"
                android:textColor="#304FFE"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="446dp"
                android:layout_marginTop="15dp"
                android:text="Düzce iline bağlı Akçakoca ilçesinde bulunan Ceneviz Kalesi, adından anlaşılacağı üzere Cenevizliler tarafından inşa edilmiştir. Kalenin bir bölümü oldukça hoş bir Karadeniz manzarası sunmaktadır.  Kalenin Akçakoca ilçe merkezine uzaklığı sadece 3 kilometredir. Etrafı ise piknik yapmak isteyen kişiler için düzenlenmiştir. Hem tarihi dokuyu hem de doğa tatilini bir arada sunan bu nokta, Düzce gezilecek yerler açısından oldukça önemli bir konuma sahiptir.   "
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView234"
                android:layout_width="match_parent"
                android:layout_height="342dp"
                app:srcCompat="@drawable/ceneviz1" />

            <ImageView
                android:id="@+id/imageView235"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                app:srcCompat="@drawable/ceneviz2" />

            <ImageView
                android:id="@+id/imageView236"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                app:srcCompat="@drawable/ceneviz3" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>