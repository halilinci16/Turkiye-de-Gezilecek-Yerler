<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".canakkale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="bozcada"
            android:text="BOZCADA"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="gelibolu"
            android:text="GELİBOLU"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="ayvacik"
            android:text="AYVACIK"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="lapseki"
            android:text="LAPSEKİ"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button16"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="canakkalekordon"
            android:text="ÇANAKKALE KORDON"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button20"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="harpmuzesi"
            android:text="ÇANAKKALE ŞEHİTLERİ ANITI VE HARP MÜZESİ"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button21"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="truva"
            android:text="TRUVA ATI"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button22"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="conkbayiri"
            android:text="CONKBAYIRI"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="aynalicarsi"
            android:text="AYNALI ÇARŞI"
            android:textSize="20sp"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="canakkalesehitlik"
            android:text="ÇANAKKALE ŞEHİTLİK ANITI"
            android:textSize="20sp"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="kilitbahir"
            android:text="KİLİTBAHİR KALESİ"
            android:textSize="20sp"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="anzak"
            android:text="ANZAK KOYU"
            android:textSize="20sp"
            android:textStyle="bold|italic"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C62828"
            android:onClick="piyade"
            android:text="57.PİYADE ŞEHİTLİĞİ"
            android:textSize="20sp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="ÇANAKKALE BELEDİYESİ SOSYAL MEDYA HESAPLARI"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/twitter"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/instagram"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/twit" />

            <ImageButton
                android:id="@+id/instagram"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/twitter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/inst" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>