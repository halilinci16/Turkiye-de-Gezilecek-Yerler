<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".torkul">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView249"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                app:srcCompat="@drawable/torkul2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TORKUL GÖLETİ VE YAYLASI"
                android:textAlignment="center"
                android:textColor="#304FFE"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="584dp"
                android:layout_marginTop="15dp"
                android:text="Düzce il merkezine bağlı Uğurköyü içerisinde yer alan Torkul Göleti ve Yaylası, denizden 1251 metre yüksekliktedir. 5000 metrekare alana sahil göl, volkanik çöküntü sonrası oluşmuştur. Gölü çevreleyen köknar, akçaağaaç, karaçam, kayın ve gürgen gibi ağaç türleri, panoramik bir görüntü sunmaktadır.  Yayla üzerinde kamp, olta balıkçılığı, piknik ve foto-safari gibi aktiviteler gerçekleştirilebilmektedir. Bunun yanı sıra Torkul ve Odayeri yaylalarının arasında yer alan 6 kilometrelik trekking parkuru, iki farklı doğal güzelliği bir arada görmenize olanak tanımaktadır. Düzce gezilecek yerler arasında oldukça popülerdir."
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView247"
                android:layout_width="match_parent"
                android:layout_height="336dp"
                app:srcCompat="@drawable/torkul" />

            <ImageView
                android:id="@+id/imageView248"
                android:layout_width="match_parent"
                android:layout_height="342dp"
                app:srcCompat="@drawable/torkul1" />

            <ImageView
                android:id="@+id/imageView250"
                android:layout_width="match_parent"
                android:layout_height="376dp"
                app:srcCompat="@drawable/torkul3" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>